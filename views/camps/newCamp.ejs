<% layout('./layouts/template') %>
    <div class="row">
        <h1 class="text-center">Add New Camp Ground</h1>
        <div class="col-6 offset-3">
            <form action="/camps" method="post">
                <div class="mb-3">
                    <label class="form-label" for="title">Enter Title: </label>
                    <input class="form-control" type="text" required id="title" placeholder="Enter Name" name="title">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Enter Location: </label>
                    <input class="form-control" type="text" required id="location" placeholder="Enter Location"
                        name="location">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">CampGround Price </label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="number" class="form-control" placeholder="0.00" name="price" id="price">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL </label>
                    <input class="form-control" type="text" required id="image" placeholder="Enter Image URL"
                        name="image">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Enter Description: </label>
                    <textarea class="form-control" type="text" required id="description" placeholder="Enter Description"
                        name="description"></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary" type="submit">Submit</button>
                </div>
            </form>
            <form action="/camps" method="GET">
                <button class="btn btn-danger" type="submit">Cancel</button>
            </form>
        </div>
    </div>
    </body>

    </html>